<body>
<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-cofirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  
    <h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@book.errors.count, "error") %>
    prohibited this book being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="field">
    <div class="field_with_error">
      <label for="book_title">Title</label>
    </div>
    <div class="field_with_error">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="field">
    <div class="field_with_error">
      <label for="book_body">Body</label>
    </div>
    <div class="field_with_error">
      <%= f.text_area :body %>
    </div>
  </div>

  <div class="acttions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>

</body>